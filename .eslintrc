{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended",
        "google",
        "plugin:react/recommended"
    ],
    "rules": {
        "linebreak-style": 0,
        "indent": [
            2,
            4
        ],
        "max-len": [
            1,
            150,
            4,
            {
                "ignoreComments": true
            }
        ],
        "arrow-parens": [
            2,
            "always"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "no-invalid-this": "off",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/prefer-es6-class": [
            2,
            "always"
        ],
        "react/jsx-pascal-case": [
            2
        ],
        "react/jsx-indent": [
            2,
            4
        ],
        "react/react-in-jsx-scope": 2,
        "babel/no-invalid-this": 1,
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": true
            }
        ]
    },
    "env": {
        "browser": false,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "flowtype",
        "babel"
    ]
}